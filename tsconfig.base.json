{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "nx-tsup": ["packages/tsup/src/index.ts"],
      "nx-yarn-publish": ["packages/yarn-publish/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
